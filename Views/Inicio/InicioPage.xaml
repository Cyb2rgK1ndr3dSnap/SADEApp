<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutomatizacionServicios.Views.Inicio.InicioPage"
             BackgroundColor="White"
             Shell.NavBarIsVisible="True"
             >

    <VerticalStackLayout 
        Spacing="10"
        Padding="10"
        >
        
        <Frame HeightRequest="200" WidthRequest="200" BorderColor="Black">
            <Image Source="dotnet_bot.png" HeightRequest="200" WidthRequest="200" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
        </Frame>

        <VerticalStackLayout Spacing="10">
            <Frame>
                <Label Text="{Binding Nombre}" FontSize="24" TextColor="Black" HorizontalTextAlignment="Center"/>
            </Frame>
        </VerticalStackLayout>

        <Label x:Name="lblId"
            Text="{Binding Id}"      
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            TextColor="Black"
         />
        
    </VerticalStackLayout>
    
</ContentPage>