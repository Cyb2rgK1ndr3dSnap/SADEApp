<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutomatizacionServicios.Views.startup.LoadingPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="Black"
             Title="LoadingPage"
             >
    <StackLayout HorizontalOptions="Fill" VerticalOptions="CenterAndExpand" Orientation="Vertical">
        <Grid VerticalOptions="CenterAndExpand">
            <StackLayout VerticalOptions="CenterAndExpand">
                <Image Source="logosample.png" HeightRequest="200" WidthRequest="200" VerticalOptions="Center" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
        </Grid>
        <Grid VerticalOptions="EndAndExpand">
            <StackLayout VerticalOptions="EndAndExpand">
                <Image Source="bannerlogo.png" HeightRequest="160" WidthRequest="160" VerticalOptions="End" HorizontalOptions="Center"/>
            </StackLayout>
        </Grid>
    </StackLayout>
</ContentPage>