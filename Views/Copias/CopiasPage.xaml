<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutomatizacionServicios.Views.Copias.CopiasPage"
             Title="Copias de Docente"
             >
    
    <VerticalStackLayout
        Spacing="30"
        Padding="10"
        >
        <Border BackgroundColor="White" Padding="20" Stroke="black" StrokeShape="RoundRectangle 40,0,0,40">
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Padding="10">
                <Grid Margin="10" Padding="10">
                        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                            <Image Source="document.png" HeightRequest="100" WidthRequest="80" HorizontalOptions="Center"/>
                            <StackLayout Orientation="Vertical" Spacing="5">
                                <Frame BorderColor="Transparent" HeightRequest="50" HorizontalOptions="StartAndExpand" Padding="2" Margin="10" HasShadow="True" BackgroundColor="Transparent">
                                    <Label 
                                    HeightRequest="20"
                                    Text="Copias para docente"
                                    />
                                </Frame>
                                <Frame HasShadow="True" HeightRequest="50" WidthRequest="140" BorderColor="Transparent" Padding="0" BackgroundColor="Transparent">
                                    <Button
                                    Command="{Binding SeleccionCommand}"
                                    Text="Realizar PeticiÃ³n"
                                    VerticalOptions="Center"
                                    HorizontalOptions="CenterAndExpand"
                                    CornerRadius="20"
                                    >
                                    </Button>
                                </Frame>
                            </StackLayout>
                        </StackLayout>
                </Grid>
            </StackLayout>
        </Border>
    </VerticalStackLayout>

</ContentPage>