<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutomatizacionServicios.Views.Dispositivos.DispositivosPage"
             BackgroundColor="White"
             IconImageSource="devices_icon"
             >
    <VerticalStackLayout
        Padding="5"
        Spacing="10">

        <StackLayout Orientation="Horizontal">
            <Frame BorderColor="Black" HasShadow="True" HorizontalOptions="FillAndExpand" Padding="0" HeightRequest="45">
                <Entry Margin="10,0,0,0" Text="{Binding Busqueda}" Placeholder="Busqueda" HorizontalOptions="FillAndExpand" VerticalOptions="Center" TextColor="Black"/>
            </Frame>
            <Frame ZIndex="1" HasShadow="True" BorderColor="White" HeightRequest="56" WidthRequest="56" Margin="-40,0,0,0" >
                <Image Source="block.png" HeightRequest="30" WidthRequest="30"/>
            </Frame>
        </StackLayout>
        
    </VerticalStackLayout>
</ContentPage>