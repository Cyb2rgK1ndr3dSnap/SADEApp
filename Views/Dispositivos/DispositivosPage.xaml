<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutomatizacionServicios.Views.Dispositivos.DispositivosPage"
             BackgroundColor="White"
             >
    <VerticalStackLayout
        Spacing="10">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            />

        <Entry Margin="20,0,0,0" Text="{Binding Busqueda}" Placeholder="Busqueda" HorizontalOptions="FillAndExpand" VerticalOptions="Center" Keyboard="Email" TextColor="Black"/>
        
    </VerticalStackLayout>
</ContentPage>